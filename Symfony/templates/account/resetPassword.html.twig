        form{
            display: flex;
            flex-direction: column;
            margin: 200px 200px 200px;
        }
    </style>
{% endblock %}

{% block title %}Reset password{% endblock %}

{% block body %}

    {{ form_start(form)}}
    {{ form_row(form.oldPassword) }}
